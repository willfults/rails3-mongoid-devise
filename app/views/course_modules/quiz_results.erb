<%= render 'courses/courses_menu', :highlight => "courses"  %>


<div class="container">
  <div class="row-fluid">
    <div class="span10" style="margin:0 auto;float:none;">
      <div class="row-fluid">
        <div class="span12">
          <p id="notice"><%= notice %></p>
          
          <h3 style="float:left;"><%= @course.name + " - " + @course_module.name %></h3>
          
          <div style="float:right;">
            <a href="<%=course_course_module_path(@course, @course_module) %>" class="btn btn-small btn-primary"><i class="icon-backward icon-white"></i>Previous</a>
            
            <% 
            if @course_module.quiz.passing_score > 0 && @score >= @course_module.quiz.passing_score
            %>
            <a href="<%=course_course_module_path(@course, @course_module) + "/next" %>" class="btn btn-small btn-primary">Next<i class="icon-forward icon-white"></i></a>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="row-fluid module-content" style="">
        <div class="span8" style="min-width:580px">
          <h3>Results</h3>
        
          <p>
            <% 
            if @course_module.quiz.passing_score > 0 && @score >= @course_module.quiz.passing_score
            %>
              Congratulations you passed!
              You got <%= @score %>% correct! The passing score was <%=@course_module.quiz.passing_score %>%. 
            <% elsif @course_module.quiz.passing_score > 0 %>
              To continue you must pass the quiz!
              You got <%= @score %>% correct! The passing score was <%=@course_module.quiz.passing_score %>%.
            <% else %>
              You got <%= @score %>% correct!
            <% end %>
            
          </p>
        </div>
        <div class="span4">
          <p>
            <%= @course_module.summary.html_safe %>
          </p>
        </div>
      </div>    
    </div>
  </div>
</div>
