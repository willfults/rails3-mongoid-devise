<%= render 'courses/courses_menu', :highlight => "courses"  %>

<div class="container">
  <div class="row-fluid">
    <div class="span10" style="margin:0 auto;float:none;">
      <div class="row-fluid">
        <div class="span12">
          <p id="notice"><%= notice %></p>
          
          <h3 style="float:left;"><%= @course.name + " - " + @course_module.name %></h3>
          
          <%= render "shared/previous_next_buttons" %>
        </div>
      </div>
      
      <div class="row-fluid module-content" style="">
        <div class="span12" style="min-width:800px">
          <iframe src="/uploads/course/scorm_file/<%=@course.id.to_s%>/<%=@course_module.scorm_resource_path%>" width=1000 height=800></iframe>
        </div>
     </div>
     <div class="row-fluid">
        <div class="span12">
          <p>
            <%= @course_module.summary.html_safe %>
          </p>
        </div>
     </div>    
   </div>
</div>
      
</div>
