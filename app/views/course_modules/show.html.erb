<%= render 'courses/courses_menu', :highlight => "courses"  %>

<div class="container">
  <div class="row-fluid">
    <div class="span10" style="margin:0 auto;float:none;">
      <div class="row-fluid">
        <div class="span12">
          <p id="notice"><%= notice %></p>
          
          <h3 style="float:left;"><%= @course.name + " - " + @course_module.name %></h3>
                  
          <%= render "shared/previous_next_buttons" %>
        </div>
        </br>
        <h6 style="float:left;"><%= "Module " << @course_module.position.to_s << " of " << @course.lastmodule.position.to_s %></h6>
        
      </div>
      
      <div class="row-fluid module-content" style="">
        <div class="span8" style="min-width:580px">
          <div class="video_wrapper">
            <div id="videoPage"> 
              <% if @course_module.class_type != "Youtube"%>	
              	<video width="580" height="435" class="jwplayer" src="<%=@course_module.file %>" id="container"></video>
              <% else %>
              	<video width="580" height="435" class="jwplayer" src="<%=@course_module.video_url %>" id="container"></video>
              <% end %>
            </div>
          </div>
        </div>
        <div class="span4">
          <p>
            <%= @course_module.summary.html_safe %>
          </p>
        </div>
      </div>    
    </div>
  </div>
      
      
      <%= javascript_tag do %>
        window.video_id = "<%= params[:id]%>";
      <% end %>
</div>
