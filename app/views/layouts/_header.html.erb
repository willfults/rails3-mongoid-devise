<div class="navbar navbar-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Social University", signed_in? ? dashboard_user_path(current_user) : root_path, id: "logo", :class=>"brand" %>
        <%= form_tag("/search", :method => "get", :id => 'search_form', :class => "navbar-search pull-left") do %>
          <input type="text" class="search-query" placeholder="Search for courses" name="query" value="<%=params[:query] %>">

        <% end %>

        <div class="nav-collapse">
          <ul class="nav">
          </ul>
        </div>


      <nav class="nav-collapse">
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Courses", admin_mode? ? manage_courses_path : my_courses_path, :title => admin_mode? ? "Create courses" : "Your courses" %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", show_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
